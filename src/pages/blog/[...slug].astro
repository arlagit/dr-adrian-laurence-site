---
import { generateSEO } from '@/lib/seo';
import BlogLayout from '@/layouts/BlogLayout.astro';

export async function getStaticPaths() {
  // No blog posts available
  return [];
}

const seo = generateSEO({
  title: 'Article Not Found',
  description: 'The requested article could not be found.',
  canonical: '/blog',
});

---

<BlogLayout seo={seo} currentPage="blog">
  <article class="max-w-4xl mx-auto text-center py-16">
    <h1 class="font-display font-semibold text-4xl md:text-5xl text-ink-900 mb-4">
      Article Not Found
    </h1>
    <p class="text-lg text-muted-600 mb-8">
      The requested article could not be found.
    </p>
    <a href="/blog" class="btn-primary">
      Back to Articles
    </a>
  </article>
</BlogLayout>