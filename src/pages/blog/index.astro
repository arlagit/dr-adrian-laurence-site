---
import { generateSEO } from '@/lib/seo';
import SimplePage from '@/layouts/SimplePage.astro';
import PageHero from '@/components/PageHero.astro';
import Section from '@/components/Section.astro';
import NewsletterSignup from '@/components/NewsletterSignup.astro';

const seo = generateSEO({
  title: 'Blog & Articles',
  description: 'Evidence-based articles and insights on health, lifestyle medicine, sleep, nutrition, and exercise.',
});
---

<SimplePage seo={seo} currentPage="blog">
  <PageHero
    title="Blog & Articles"
    kicker="Evidence-based insights on health, lifestyle medicine, and practical strategies to optimize your health without extremes."
  />

  <Section>
    <div class="max-w-4xl mx-auto text-center">
      <div class="card p-12">
        <h2 class="font-display font-semibold text-3xl mb-4">Articles Coming Soon</h2>
        <p class="text-lg text-muted-600 mb-6">
          I'm working on creating valuable, evidence-based content to help you optimize your health and well-being. 
          New articles will be published regularly covering topics like lifestyle medicine, sleep optimization, 
          nutrition, exercise, and practical health strategies.
        </p>
        <p class="text-muted-500">
          In the meantime, you can stay updated by subscribing to my newsletter below.
        </p>
      </div>
    </div>
  </Section>

  <Section background="gray">
    <div class="max-w-2xl mx-auto">
      <NewsletterSignup variant="box" />
    </div>
  </Section>
</SimplePage>
