---
import { NEWSLETTER_URL } from '@/lib/schema';

interface Props {
  variant?: 'inline' | 'box';
  className?: string;
}

const { variant = 'box', className = '' } = Astro.props;
---

{variant === 'box' ? (
  <div class={`card p-8 text-center ${className}`}>
    <h3 class="font-display font-semibold text-2xl mb-4">Weekly Health Insights</h3>
    <p class="text-muted-600 mb-6 max-w-md mx-auto">
      Get practical, evidence-based strategies for energy, strength, sleep, and longevity delivered to your inbox every week.
    </p>
    <a
      href={NEWSLETTER_URL}
      class="btn-primary"
      target="_blank"
      rel="noopener noreferrer"
    >
      Subscribe on Substack
    </a>
  </div>
) : (
  <div class={`bg-primary-50 rounded-2xl p-6 ${className}`}>
    <div class="flex items-center justify-between">
      <div>
        <h4 class="font-display font-semibold mb-1">Weekly Health Insights</h4>
        <p class="text-muted-600 text-sm">Evidence-based strategies for better health</p>
      </div>
      <a
        href={NEWSLETTER_URL}
        class="btn-primary text-sm"
        target="_blank"
        rel="noopener noreferrer"
      >
        Subscribe
      </a>
    </div>
  </div>
)}

